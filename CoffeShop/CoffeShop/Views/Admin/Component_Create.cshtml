@model Component

@{
    ViewData["Title"] = "Component_Create";
}


<h4>Новий складник</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Component_Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="Unit" class="control-label">Одиниці</label>
                <select asp-for="Unit" class="form-control" asp-items="ViewBag.Units"></select>

            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Component_List">назад</a>
</div>

