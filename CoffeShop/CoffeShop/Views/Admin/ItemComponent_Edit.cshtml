@model ItemComponent

@{
    ViewData["Title"] = "ItemComponent_Edit";
}

<h2>Зміни Компоненту в Продукті</h2>

<hr />
<div class="row">

    <dl class="dl-horizontal">

        <dt>
            @Html.DisplayNameFor(model => model.ComponentItem.Name)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ComponentItem.Name)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.CurrentComponent.Name)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.CurrentComponent.Name)
        </dd>
    </dl>
    <hr />
    <div class="col-md-4">
        <form asp-action="ItemComponent_Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @Html.HiddenFor(model => model.Id)
            @Html.HiddenFor(model => model.ComponentItem.Id)
            <div class="form-group">
                <label asp-for="Amount" class="control-label"></label>
                <input asp-for="Amount" class="form-control" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <input type="submit" value="Зберегти" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>

    @Html.ActionLink(
        "назад",
        "Item_Edit",            // controller action
        "Admin",        // controller
        new { itemId = @Model.ComponentItem.Id })


</div>

