@model IEnumerable<CoffeShop>

@{
    ViewData["Title"] = "CoffeShop_List";
}

<h2>Список кав'ярень</h2>

<p>
    <a asp-action="CoffeShop_Create">Створити нову кав'ярню</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Adress)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Adress)
                </td>
                <td>
                    <a asp-action="CoffeShop_Edit" asp-route-coffeShopId="@item.Id">Внести Зміни</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
