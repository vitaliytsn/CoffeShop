@model ComponentDelivery

@{
    ViewData["Title"] = "ComponentDelivery_Create";
}

<h2>Достава Складника</h2>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ComponentDelivery_Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CoffeShop.Id" class="control-label">Кав'ярня</label>
                <select asp-for="CoffeShop.Id" class="form-control" asp-items="ViewBag.CoffeShops"></select>
                <span asp-validation-for="CoffeShop" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ComponentDelivered.Id" class="control-label">Складники</label>
                <select asp-for="ComponentDelivered.Id" class="form-control" asp-items="ViewBag.Components"></select>
                <span asp-validation-for="ComponentDelivered" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Amount" class="control-label">Кількість</label>
                <input asp-for="Amount" class="form-control" />
                <span asp-validation-for="Amount" class="text-danger"></span>

                <label asp-for="UnitsDelivered" class="control-label">Одиниці</label>
                <select asp-for="UnitsDelivered" class="form-control" asp-items="ViewBag.Units"></select>
               
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

