@using CoffeShop.Models;
@model Item

@{
    ViewData["Title"] = "Item_Edit";
}

<h2>Внести Зміни До Товару</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Item_Edit">
            @Html.HiddenFor(model => model.Group.Id)
            @Html.HiddenFor(model => model.Id)
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Зберегти" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>
<div id="SellingPartial">
</div>
<script type="text/javascript">
    window.onload=function () {
        var x = window.innerHeight;
        var y = window.innerWidth;
        var link =
            "@Html.Raw(Url.Action("ItemComponent_ListPartial", "Admin", new { X= "widthToReplace", Y = "heightToReplace", itemId = @Model.Id }))";
        link = link.replace("heightToReplace", x);
        link = link.replace("widthToReplace", y);
        $("#SellingPartial").load(link);
    };
</script>

<div>
    @Html.ActionLink(
        "назад",
        "ItemGroup_Edit",            // controller action
        "Admin",        // controller
        new {Id = @ViewBag.GroupId })
</div>

